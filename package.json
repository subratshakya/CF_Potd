{
  "name": "codeforces-daily-problems-extension",
  "version": "1.0.0",
  "description": "A beautiful Chrome extension that provides personalized daily coding problems for Codeforces users",
  "type": "module",
  "main": "src/controllers/main-controller.js",
  "scripts": {
    "dev": "echo 'Extension development mode - load unpacked in Chrome'",
    "build": "echo 'Extension files are ready for installation'",
    "zip": "zip -r codeforces-daily-extension.zip . -x '*.git*' 'node_modules/*' 'package*.json' '.bolt/*' 'tests/*' '.env*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "validate": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3"
  },
  "keywords": [
    "codeforces",
    "coding",
    "problems",
    "competitive-programming",
    "chrome-extension",
    "daily-problems",
    "streak-tracking"
  ],
  "author": "Codeforces Daily Extension",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}