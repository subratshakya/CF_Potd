# Chrome Extension Configuration
EXTENSION_NAME="Codeforces Daily Problems"
EXTENSION_VERSION="1.0.0"
EXTENSION_DESCRIPTION="Get personalized daily coding problems based on your Codeforces rating"

# API Configuration
CODEFORCES_API_BASE_URL="https://codeforces.com/api"
CODEFORCES_WEBSITE_URL="https://codeforces.com"

# Cache Configuration
CACHE_DURATION_HOURS=24
MAX_SUBMISSIONS_CHECK=100

# Streak Configuration
STREAK_CHECK_TIMES="00:00,12:00"
TIMEZONE="UTC"

# Problem Rating Configuration
MIN_RATING=800
MAX_RATING=3500
RATING_BUFFER_LOW=100
RATING_BUFFER_HIGH=300

# Development
NODE_ENV="development"
DEBUG_MODE=false