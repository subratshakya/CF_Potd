{
  "manifest_version": 3,
  "name": "Codeforces Daily Problems",
  "version": "1.0.0",
  "description": "Get personalized daily coding problems based on your Codeforces rating",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/*"],
      "js": [
        "src/config/constants.js",
        "src/utils/logger.js",
        "src/utils/date-utils.js",
        "src/utils/hash-utils.js",
        "src/services/storage-service.js",
        "src/services/api-service.js",
        "src/services/user-detection-service.js",
        "src/services/problem-service.js",
        "src/models/streak-model.js",
        "src/components/ui-components.js",
        "src/components/calendar-component.js",
        "src/controllers/main-controller.js"
      ],
      "css": ["styles.css", "src/styles/calendar.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background/background-service.js",
    "type": "module"
  }
}